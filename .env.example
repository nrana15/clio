# CLIO Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# Environment
# ============================================
ENVIRONMENT=development

# ============================================
# Database (PostgreSQL)
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=clio
DB_USER=clio
DB_PASSWORD=change_this_in_production

# Full database URL (used by SQLAlchemy)
DATABASE_URL=postgresql+asyncpg://clio:change_this_in_production@localhost:5432/clio

# ============================================
# Redis
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379/0

# Celery specific Redis URLs
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ============================================
# MinIO (Object Storage)
# ============================================
MINIO_ENDPOINT=localhost:9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_BUCKET=clio-statements
MINIO_USE_SSL=false

# ============================================
# JWT Configuration
# ============================================
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-long
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# API Configuration
# ============================================
API_PORT=8000
API_HOST=0.0.0.0

# ============================================
# OTP Configuration (Development)
# ============================================
# In development, OTP is printed to logs
# In production, integrate with SMS provider (Twilio, etc.)
OTP_LENGTH=6
OTP_EXPIRE_MINUTES=5

# ============================================
# Data Retention (Days)
# ============================================
STATEMENT_RETENTION_DAYS=90
AUDIT_LOG_RETENTION_DAYS=365

# ============================================
# File Upload Limits
# ============================================
MAX_UPLOAD_SIZE_MB=10
ALLOWED_UPLOAD_TYPES=application/pdf,image/jpeg,image/png,image/heic

# ============================================
# Push Notifications (FCM)
# ============================================
# FCM_SERVER_KEY=your_fcm_server_key

# ============================================
# Email Webhook
# ============================================
EMAIL_WEBHOOK_SECRET=your_webhook_secret_key
